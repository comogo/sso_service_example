<!DOCTYPE html>
<html lang="en" ng-app="authApp">
  <head>
  </head>

  <body>
    <div id="content" ng-controller="MainController as main">
      <!-- Login form -->
      <form method="post" action="/login" ng-show="main.enableLogin">
        <div class="fields">
          <div class="field">
            <label for="username">Username</label>
            <input type="text" name="username" value="<%= username %>" />
          </div>

          <div class="field">
            <label for="password">Password</label>
            <input type="password" name="password" />
          </div>
        </div>

        <div class="buttons">
          <input type="submit" value="Login" /> or
          <a href="#" ng-click="main.showSignup()">Signup</a>
        </div>
      </form>

      <!-- Signup form -->
      <form method="post" action="/signup" ng-hide="main.enableLogin">
        <div class="fields">
          <div class="field">
            <label for="username">Username</label>
            <input type="text" name="username" />
          </div>

          <div class="field">
            <label for="username">Email</label>
            <input type="text" name="username" />
          </div>

          <div class="field">
            <label for="password">Password</label>
            <input type="password" name="password" />
          </div>

          <div class="field">
            <label for="password">Password Confirmation</label>
            <input type="password" name="password_confirmation" />
          </div>
        </div>

        <div class="buttons">
          <input type="submit" value="Signup" /> or
          <a href="#" ng-click="main.showLogin()">Login</a>
        </div>
      </form>
    </div>

    <script type="text/javascript" src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="/bower_components/angular/angular.min.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
  </body>
</html>
